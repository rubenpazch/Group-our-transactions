<br>
<div class="d-flex justify-content-between align-items-end pl-2">
  <div>Gift credit</div>
  <div><%=  number_to_currency(current_user.all_total_amount, precision: 2)   %></div>
  <div><%= link_to "New",  new_wishlist_path, class: "btn btn-success" %> </div>
  
</div>    
<br>
<table class="table">
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Icon</th>
      <th scope="col">Creator</th>
      <th scope="col">Date</th>
      <th colspan="3" scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    <% @wishlists.each do |wishlist| %>
      <tr>
        <td scope="row"><%= wishlist.name %></td>
        <td><%= number_to_currency(wishlist.price, precision: 2)  %></td>
        <% if wishlist.icons? %>
          <td> 
            <% wishlist.groups.each do |t| %> 
              <i class="<%= t.icon %>"></i> 
            <% end %>
          </td>
        <% else %>
          <td> - </td>
        <% end%>  
        <td><%= wishlist.author.username %></td>
        <td><%= wishlist.created_at.strftime("%b %d, %Y - %I:%M%p" ).downcase %></td>
        <td><%= link_to 'Show', wishlist %></td>
        <td><%= link_to 'Edit', edit_wishlist_path(wishlist) %></td>
        <td><%= link_to 'Destroy', wishlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
