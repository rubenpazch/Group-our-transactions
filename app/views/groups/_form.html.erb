    <br>
    <%= radio_button_tag(:age, "adult") %>
    <%= label_tag(:age_adult, "") %>
    <i class="fas fa-american-sign-language-interpreting"></i>
    <br>
    <%= radio_button_tag(:age, "adult") %>
    <%= label_tag(:age_adult, "") %>
    <i class="fas fa-anchor"></i>
    <br>
    <%= radio_button_tag(:age, "adult") %>
    <%= label_tag(:age_adult, "") %>
    <i class="fab fa-amilia"></i>
    <br>
    <%= radio_button_tag(:age, "adult") %>
    <%= label_tag(:age_adult, "") %>
    <i class="fas fa-ambulance"></i>
    <br>
    <%= radio_button_tag(:age, "adult") %>
    <%= label_tag(:age_adult, "") %>
