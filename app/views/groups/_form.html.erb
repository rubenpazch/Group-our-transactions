<div>
  <%= form_with(model: group, local: true) do |form| %>
    <div class="field">
      <div class="form-input">
        <%= form.text_field :name, class: 'form-control font-label-style',placeholder: "Name of the group"  %>
      </div>
    </div>    
    <div class="field check-input-style">
      <br>
      <%= form.label :icon, class: "font-label-style" %>
      <br>
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fab fa-500px ") %>    
        <i class="fab fa-500px icon-size-group ml-3"></i>
        <br>
      </div>
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fas fa-american-sign-language-interpreting") %>    
        <i class="fas fa-american-sign-language-interpreting icon-size-group ml-3"></i>
        <br>
      </div>
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fab fa-accusoft") %>    
        <i class="fab fa-accusoft icon-size-group ml-3"></i>
        <br>
      </div>
         
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fas fa-anchor") %>    
        <i class="fas fa-anchor icon-size-group ml-3"></i>
        <br>
      </div>
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fab fa-amilia") %>    
        <i class="fab fa-amilia icon-size-group ml-3"></i>
        <br>
      </div>
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fas fa-ambulance") %>    
        <i class="fas fa-ambulance icon-size-group ml-3"></i>
        <br>
      </div>
      <div class="check-item-style">
         <%= radio_button_tag(:icon, "fab fa-amazon") %>    
        <i class="fab fa-amazon icon-size-group ml-3"></i>
        <br>
      </div>
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fab fa-airbnb") %>    
        <i class="fab fa-airbnb icon-size-group ml-3"></i>
        <br>
      </div>
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fas fa-air-freshener") %>    
        <i class="fas fa-air-freshener icon-size-group ml-3"></i>
        <br>
      </div>
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fab fa-alipay") %>    
        <i class="fab fa-alipay icon-size-group ml-3"></i>
        <br>
      </div>
      <div class="check-item-style">
        <%= radio_button_tag(:icon, "fas fa-allergies") %>    
        <i class="fas fa-allergies icon-size-group ml-3"></i>
      </div>
    </div>
    <br>
    <div class="actions">      
      <%= form.submit "Save", class: "btn new-wishlist-button" %>
    </div>
  <% end %>
</div>